<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure Time: </div>
  <div><%= flight.departs %></div>
  <div>Operation Status: </div>
  <div><%= flight.inOperation ? 'Yes' : 'Nope' %></div>

  <div></div>

</section>

<h2>Add a Destination and Arrival Time:</h2>
<form id="new-form" action="/flights/<%= flight._id %>/destinations" method="POST">

  <label>Destination:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SFO">SFO</option>
    </select>
  </label>

  <label>Arrival Time:
    <input type="datetime-local" name="arrival">
  </label>

  <button type="submit">Add Destination and Arrival Time</button>
</form>

<% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Destination</th>
        <th>Arrival Time</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(f) { %>
        <tr>
          <td><%= f.airport %></td>
          <td><%= f.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destinations Yet</h5>
<% } %>

<div>
  <a href="/flights/<%= flight._id %>/tickets/new">Add Ticket</a>
</div>

<table>
<tr>
  <th>Tickets</th>
  <% if (tickets.length) { %>
    <% tickets.forEach(function(ticket){ %>
      <td><%= ticket.seat %>, $<%= ticket.price %></td>
    <% }) %>

  <% } else { %>
    <td>No Tickets Available</td>
  <% } %>
</tr>
</table>


<%- include('../partials/footer') %>
